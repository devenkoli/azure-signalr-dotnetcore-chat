
@using SampleChatSignalRCore.Web.Models;
@model List<Room>;

@if (Model.Count > 0)
{
    <input type="hidden" id="roomId" value="@ViewData["RoomId"]?.ToString()" />
    @foreach (var item in Model)
    {
    <li title="@item.Name" onclick="setCurrentRoom(@item.Id)" class="@(item.Id.ToString() == ViewData["RoomId"]?.ToString() ? "active" : "")">
        <div class="message-bubble room_msg_bubble_@item.Id" style="display: none;"></div>
        <div class="roomname room_@item.Id @(item.Id.ToString() == ViewData["RoomId"]?.ToString() ? "active" : "")">
            <span>@item.Name</span>
        </div>
    </li>
    }
}