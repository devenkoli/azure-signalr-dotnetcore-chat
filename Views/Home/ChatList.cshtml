
@using SampleChatSignalRCore.Web.Models;
@model List<Message>;
<style>
    .chatcard .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        max-width: 450px;
        padding: 10px;
    }

    /* Add some padding inside the card container */
    .container {
        padding: 2px 16px;
    }

    .username {
        font-size: 14px;
        font-weight: bold;
        color: #337ab7;
    }


    .chatcard {
        margin: 10px;
        min-width: 250px;
    }

        .chatcard .card {
            border-radius: 8px;
            padding: 10px;
        }

    .message {
        font-size: 12px;
        word-break: break-all;
    }

    .timestamp {
        font-size: 10px;
        font-style: italic;
        color: grey;
        text-align: right;
    }

    .isMine {
        float: right;
    }

    .isOthers {
        float: left;
    }

    .isMine .card {
        float: right;
        background-color: #f0f0f0;
    }

    .isOthers .card {
        background-color: #fefefe;
    }
</style>





@if (Model.Count > 0)
{
    @foreach (var item in Model)
    {<li> 
            <div class="chatcard  @(item.UserName == ViewData["UserName"]?.ToString() ? "isMine" : "isOthers")">
                <div class="card">
                    <div class="username"> @item.UserName</div>
                    <div class="message">@item.Content</div>
                    <div class="timestamp">
                        <span>@item.Timestamp</span>
                    </div>
                </div>
            </div>
        </li>
    }
}